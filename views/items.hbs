<div class='row'>
	<div class='col-md-12'>
		<h2>Items -
			<a href='/Items/add' class='btn btn-success pull-right'>Add Item</a></h2>
		<hr />
		{{#if items}}
			<div class='table-responsive'>
				<table class='table'>
					<thead>
						<tr>
							<th scope='col'>Item ID</th>
							<th scope='col'>Title</th>
							<th scope='col'>Post Date</th>
							<th scope='col'>Category</th>
							<th scope='col'>Price</th>
							<th scope='col'>Published</th>
							<th scope='col'></th>
						</tr>
					</thead>

					<tbody>
						{{#each items}}
							<tr>
								<td scope='row'>{{this.id}}</td>
								<td>{{this.title}}</td>
								<td>{{#formatDate this.itemDate}}{{/formatDate}}</td>
								<td><a
										href='/items?category={{this.category}}'
									>{{this.category}}</a></td>
								<td>$ {{this.price}}</td>
								<td>{{this.published}}</td>
								<td><a
										href='/item/delete/{{this.id}}'
										class='btn btn-danger'
									>Remove</a></td>
							</tr>
						{{/each}}
					</tbody>
				</table>
			</div>
		{{/if}}
	</div>

	{{#unless items}}
		<div class='col-md-12 text-center'>
			<strong>{{this.message}}</strong>
		</div>
	{{/unless}}
</div>